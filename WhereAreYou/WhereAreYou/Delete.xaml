<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WhereAreYou.Delete">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout x:Name="C">
                <Label x:Name="CLbl" Text="Course:"/>
                <Entry x:Name="CEntry"/>
            </StackLayout>

            <StackLayout x:Name="G">
                <Label x:Name="GLbl" Text="Group:"/>
                <Entry x:Name="GEntry"/>
            </StackLayout>
            <StackLayout x:Name="DSL" VerticalOptions="Center">
                <Label x:Name="DLbl" Text="Day:(*1-5  Monday=1,Tuesday=2.....)"/>
                <Entry x:Name="DPick"/>
            </StackLayout>
            <StackLayout x:Name="STSL" VerticalOptions="Center">
                <Label x:Name="STLbl" Text="Start Time:"/>
                <Entry x:Name="STEntry"/>
            </StackLayout>


        </StackLayout>
       
        

    </ContentPage.Content>
</ContentPage>