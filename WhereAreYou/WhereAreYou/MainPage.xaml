<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WhereAreYou.MainPage">

    <StackLayout BackgroundColor="LightGray">
        <Frame BackgroundColor="#E43B12" Padding="24" CornerRadius="0">
            <Label Text="WAY! Where are you?" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Label Text="Please enter Username and Password" HorizontalOptions="Center" FontSize="Title" Padding="30,10,30,10"/>

        <StackLayout Orientation="Horizontal">
            <Entry x:Name="userName" Placeholder="Username" HorizontalOptions="FillAndExpand"/>
        </StackLayout>

        <StackLayout Orientation="Horizontal">
            <Entry x:Name="userPass" IsPassword="True" Placeholder="Password" HorizontalOptions="FillAndExpand"/>
        </StackLayout>


        <Button x:Name="BtnNextPage" Text="Continue" Clicked="BtnNextPage_Clicked"/>
        <Label x:Name="LblInfoDisplay" TextColor="Black" Text="Good Luck!" HorizontalTextAlignment="Center" />

    </StackLayout>

</ContentPage>
