<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WhereAreYou.Page1">
    <ContentPage.Content>
        
            <StackLayout BackgroundColor="LightGray">
            <StackLayout Orientation="Horizontal">
                <Entry x:Name="newuserPass" IsPassword="True" Placeholder="New Password" HorizontalOptions="FillAndExpand"/>
            </StackLayout>
        
            <StackLayout Orientation="Horizontal">
             <Entry x:Name="newuserPass2" IsPassword="True" Placeholder="Confirm new Password" HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Button x:Name="Reset" Text="Confirm your New password" Clicked="Reset_Clicked"></Button>
            </StackLayout>
            <StackLayout Orientation="Horizontal">  
            <Label x:Name="LblInfoDisplay" TextColor="Black" Text="Good Luck!" HorizontalTextAlignment="Center" />
            </StackLayout>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>